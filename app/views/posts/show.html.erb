<section id="post_info">
  <div class="post_desc">
    <div class="unit">
      <h2><%= @post.title %> by <%= @post.author.name%></h2>
      <h4>Comments:<%= @post.comments_counter %>,  Likes:<%= @post.likes_counter%></h4>
    </div>
    <p class="P_text"><%= @post.text%></p>
  </div>
  
  <div class="com_on_Post">
  <h3>comments:</h3>
    <ul>
      <% @post_comments.each do |comment| %>
        <li><%= comment.author.name %>: <%= comment.text %></li>
      <% end %>
    </ul>
  </div>
      <section class='crud_btn'>
      <button type='button'>
        <%= link_to 'Add New Comment', new_user_post_comment_path(@post.author, @post) %>
      </button>
      <section class='like_form'>
        <%= form_with model: Like, url: user_post_likes_path(@post.author, @post) do |f| %>
          <%= f.submit 'Like Post' %>
        <% end %>
      </section>
    </section>
</section>
